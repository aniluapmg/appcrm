<p id="notice"><%= notice %></p>
<div class="center jumbotron">
<h3>Prospectos | Ingresar nuevo prospecto</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Status</th>
      <th>Fecha de Ingreso</th>
      <th colspan="3"></th>
      
    </tr>
  </thead>

  <tbody>
    <% @prospects.each do |prospect| %>
      <tr>
        <td><%= prospect.name %></td>
        <td><%= prospect.last_name %></td>
        <td><%= prospect.phone %></td>
        <td><%= prospect.email %></td>
        <td><%= prospect.status %></td>
        <td><%= prospect.created_at %></td>
        <td><%= prospect.chats.count %>  <%= link_to prospect do %> <%= image_tag "ver.png" %>
        <% end %></td>
        
        <td><%= link_to 'Show', prospect %></td>
        <td><%= link_to 'Edit', edit_prospect_path(prospect) %></td>
        <td><%= link_to 'Destroy', prospect, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Prospecto', new_prospect_path, class:"btn btn-primary" %>
</div>